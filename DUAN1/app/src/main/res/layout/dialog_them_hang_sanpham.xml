<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:text="Thêm Hãng"
        android:textColor="#4BB9A0"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_hmahang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/black"
        android:fontFamily="@font/bree_serif"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tên hãng sản phẩm:"
        android:textColor="@color/black"
        android:fontFamily="@font/bree_serif"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/et_tenhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hanh"
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/btn_hanh"
            android:backgroundTint="#4BB9A0"
            android:fontFamily="@font/bree_serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:text="Chọn ảnh" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:backgroundTint="#4BB9A0"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_hhuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00CD1212"
                android:layout_gravity="center"
                android:fontFamily="@font/bree_serif"
                android:text="Hủy"
                android:textSize="20dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:backgroundTint="#4BB9A0"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_hthem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00CD1212"
                android:layout_gravity="center"
                android:fontFamily="@font/bree_serif"
                android:text="Lưu"
                android:textSize="20dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
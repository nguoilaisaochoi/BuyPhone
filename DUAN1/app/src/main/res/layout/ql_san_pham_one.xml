<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/do_bong"
        android:orientation="horizontal"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp">

            <ImageView
                android:id="@+id/adanh"
                android:layout_width="90sp"
                android:layout_height="110sp"
                android:layout_marginEnd="10sp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/image5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:id="@+id/adtensp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_marginBottom="5sp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/admanhinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5sp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:paddingStart="5sp"
                        android:paddingEnd="5sp"
                        android:text="6.8 inches"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/adram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5sp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:paddingStart="5sp"
                        android:paddingEnd="5sp"
                        android:text="8GB"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addungluong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5sp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:paddingStart="5sp"
                        android:paddingEnd="5sp"
                        android:text="256GB"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/adhangsp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5sp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:paddingStart="5sp"
                        android:paddingEnd="5sp"
                        android:text="Samssung"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adgia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:text="28,490,000000đ"
                        android:textColor="#f00" />

                    <Button
                        android:id="@+id/btnsua"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:backgroundTint="#4BB9A0"
                        android:text="Sửa"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        app:cornerRadius="30sp" />

                    <Button
                        android:id="@+id/btnxoa"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:backgroundTint="#4BB9A0"
                        android:layout_weight="1"
                        android:layout_marginLeft="10sp"
                        android:text="Xoá"
                        android:ellipsize="end"
                        app:cornerRadius="30sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
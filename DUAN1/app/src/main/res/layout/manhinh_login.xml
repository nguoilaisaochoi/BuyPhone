<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D9D9D9">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/image1"
            android:layout_gravity="center"
            android:background="@drawable/khung_img"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:text="Đăng nhập"
        android:textColor="#4BB9A0"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/bree_serif"
        android:text="Tài khoản"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/taikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="35sp"
        android:fontFamily="@font/bree_serif"
        android:inputType="text"
        app:passwordToggleEnabled="true"
        android:textSize="20sp"
        android:paddingStart="0dp"
        android:paddingBottom="2sp"
        android:textStyle="bold"
        android:text="aaaâ"
        android:background="@drawable/edittextclone"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/bree_serif"
        android:text="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="35sp"
            android:fontFamily="@font/bree_serif"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"
            android:textSize="20sp"
            android:paddingStart="0dp"
            android:paddingBottom="2sp"
            android:textStyle="bold"
            android:text="aaaâ"
            android:background="@drawable/edittextclone"/>

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkghinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/bree_serif"
            android:text="Ghi nhớ"
            android:textColor="#4BB9A0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dangki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/bree_serif"
            android:paddingLeft="70sp"
            android:text="Đăng ký"
            android:textColor="#4BB9A0"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:backgroundTint="#4BB9A0"
        app:cardCornerRadius="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00CD1212"
            android:fontFamily="@font/bree_serif"
            android:text="Đăng nhập"
            android:textSize="30sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
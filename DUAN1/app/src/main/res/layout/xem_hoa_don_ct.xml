<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoá đơn: 1"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        />
        <TextView
            android:id="@+id/hdct_matv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã tv: TV1"
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/hdct_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên: Vòng Anh Trọng"
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/hdct_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày: 15/10/2023"
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/hdct_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm: Iphone 15 Pro Max , Iphone 13 Pro,
Macbook Pro 24 inches  "
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/hdct_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: 3"
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/hdct_tongtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 50,000,000đ"
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            />
        <Button
            android:id="@+id/hdct_btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4BB9A0"
            android:text="Huỷ"
            android:textSize="20dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
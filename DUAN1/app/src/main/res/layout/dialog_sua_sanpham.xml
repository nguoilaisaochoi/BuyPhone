<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Màu đen mờ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- ScrollView và nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:nestedScrollingEnabled="false">

        <!-- Nội dung của ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:gravity="center"
                android:text="Thông tin sản phẩm"
                android:textColor="#4BB9A0"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvmasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:text="Tên sản phẩm:"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/ettensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:hint="Iphone 13 Pro 256GB"
                android:inputType="text"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:text="Hãng:"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/sp_hang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/khung_search" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:text="Giá sản phẩm:"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/etgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:hint="15.500.00"
                android:inputType="number"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:text="Màn hình:"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/etmanhinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:hint="6.1"
                android:inputType="numberDecimal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:text="Ram:"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/etram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:hint="2"
                android:inputType="number"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:text="Dung lượng:"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/etdungluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:hint="250"
                android:inputType="number"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivanh"
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_gallery" />

                <Button
                    android:id="@+id/btnanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="#4BB9A0"
                    android:text="Chọn ảnh" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:backgroundTint="#4BB9A0"
                    app:cardCornerRadius="10dp">

                    <Button
                        android:id="@+id/btnhuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00CD1212"
                        android:fontFamily="@font/bree_serif"
                        android:text="Hủy"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:backgroundTint="#4BB9A0"
                    app:cardCornerRadius="10dp">

                    <Button
                        android:id="@+id/btnluu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00CD1212"
                        android:fontFamily="@font/bree_serif"
                        android:text="Lưu"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

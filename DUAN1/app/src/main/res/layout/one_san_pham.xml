<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/do_bong"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/anh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/image5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tensanpham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:fontFamily="@font/bree_serif"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/lntt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/manhinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5dp"
                        android:padding="1dp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="6.8 inches" />

                    <TextView
                        android:id="@+id/ram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="8GB" />

                    <TextView
                        android:id="@+id/dungluong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="256GB" />

                    <TextView
                        android:id="@+id/hangsp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/text_bgn1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:padding="1dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Iphone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:text="28,490,000đ"
                        android:textSize="17sp"
                        android:textColor="#E81616" />

                    <Button
                        android:id="@+id/btnaddgh"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="#4BB9A0"
                        android:text="Thêm vào giỏ hàng"
                        android:textSize="11dp"
                        app:cornerRadius="30dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>